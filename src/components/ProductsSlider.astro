<style>
  .products-slider {
    padding: 5rem 0;
    background: linear-gradient(135deg, var(--color-blue-light) 0%, var(--color-white) 50%, var(--color-blue-light) 100%);
    position: relative;
    overflow: hidden;
  }

  .products-slider::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: 
      radial-gradient(circle at 20% 80%, rgba(3, 105, 161, 0.1) 0%, transparent 50%),
      radial-gradient(circle at 80% 20%, rgba(30, 41, 59, 0.05) 0%, transparent 50%);
    opacity: 0.8;
  }

  .container {
    position: relative;
    z-index: 1;
    max-width: 1600px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .section-header {
    text-align: center;
    margin-bottom: 4rem;
    padding-top: 1rem;
  }

  .section-header h2 {
    font-family: 'Montserrat', sans-serif;
    font-size: 3.25rem;
    font-weight: 700;
    color: var(--color-navy);
    margin-bottom: 1.5rem;
    letter-spacing: -0.5px;
  }

  .section-header p {
    font-family: 'Inter', sans-serif;
    font-size: 1.25rem;
    color: var(--color-text);
    font-weight: 400;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.7;
  }

  .slider-container {
    position: relative;
    overflow: hidden;
    border-radius: 20px;
    box-shadow: 
      0 20px 25px -5px rgba(0, 0, 0, 0.1),
      0 25px 50px -12px rgba(0, 0, 0, 0.15);
    margin: 0 0.5rem;
    cursor: grab;
    user-select: none;
    background: var(--color-white);
    border: 1px solid rgba(203, 213, 225, 0.3);
  }

  .slider-container:active {
    cursor: grabbing;
  }

  .slider-track {
    display: flex;
    gap: 2.5rem;
    padding: 3rem 2rem;
  }

  .product-card {
    min-width: 450px;
    background: var(--color-white);
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 
      0 10px 15px -3px rgba(0, 0, 0, 0.1),
      0 4px 6px -2px rgba(0, 0, 0, 0.05);
    transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    border: 1px solid rgba(203, 213, 225, 0.3);
    position: relative;
  }

  .product-card:hover {
    transform: translateY(-8px);
    box-shadow: 
      0 20px 25px -5px rgba(0, 0, 0, 0.15),
      0 10px 10px -5px rgba(0, 0, 0, 0.08);
  }

  .product-image {
    position: relative;
    height: 320px;
    overflow: hidden;
    background: var(--color-gray-light);
  }

  .product-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s ease;
  }

  .product-card:hover .product-image img {
    transform: scale(1.05);
  }

  .product-badge {
    position: absolute;
    top: 1rem;
    right: 1rem;
    background: var(--color-orange);
    color: var(--color-white);
    padding: 0.6rem 1.2rem;
    border-radius: 12px;
    font-family: 'Montserrat', sans-serif;
    font-size: 0.875rem;
    font-weight: 600;
    box-shadow: 0 8px 16px -4px rgba(234, 88, 12, 0.4);
    z-index: 2;
  }

  .product-content {
    padding: 2.5rem;
  }

  .product-content h3 {
    font-family: 'Montserrat', sans-serif;
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--color-navy);
    margin-bottom: 1rem;
    line-height: 1.3;
  }

  .product-content p {
    font-family: 'Inter', sans-serif;
    color: var(--color-text);
    line-height: 1.7;
    margin-bottom: 1.5rem;
    font-size: 0.95rem;
  }

  .product-features {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .feature-tag {
    background: var(--color-blue);
    color: var(--color-white);
    padding: 0.6rem 1.2rem;
    border-radius: 12px;
    font-family: 'Inter', sans-serif;
    font-size: 0.875rem;
    font-weight: 500;
    box-shadow: 0 4px 8px rgba(3, 105, 161, 0.3);
  }

  @media (max-width: 768px) {
    .products-slider {
      padding: 3rem 0;
    }

    .section-header h2 {
      font-size: 2.5rem;
    }

    .section-header p {
      font-size: 1.1rem;
    }

    .product-card {
      min-width: 350px;
    }

    .product-content {
      padding: 2rem;
    }

    .product-content h3 {
      font-size: 1.25rem;
    }

    .slider-track {
      padding: 2rem 1rem;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const slider = document.querySelector('.slider-container') as HTMLElement;
    const track = document.querySelector('.slider-track') as HTMLElement;
    
    if (!slider || !track) return;

    let isDragging = false;
    let startPos = 0;
    let currentTranslate = 0;
    let prevTranslate = 0;
    let animationFrameId: number;

    // --- Event Listeners ---
    slider.addEventListener('contextmenu', (e) => e.preventDefault());
    slider.addEventListener('mousedown', dragStart);
    slider.addEventListener('mouseup', dragEnd);
    slider.addEventListener('mouseleave', dragEnd);
    slider.addEventListener('mousemove', dragMove);
    slider.addEventListener('touchstart', dragStart, { passive: true });
    slider.addEventListener('touchend', dragEnd);
    slider.addEventListener('touchmove', dragMove);

    function getPositionX(e: Event): number {
      return e.type.includes('mouse') 
        ? (e as MouseEvent).clientX 
        : (e as TouchEvent).touches[0].clientX;
    }

    function dragStart(e: Event) {
      isDragging = true;
      startPos = getPositionX(e);
      
      cancelAnimationFrame(animationFrameId);

      const transformMatrix = window.getComputedStyle(track).getPropertyValue('transform');
      if (transformMatrix !== 'none') {
        // Extrae el valor de translateX (el quinto valor en la matriz 2D)
        currentTranslate = Number(transformMatrix.split(',')[4].trim());
      }
      prevTranslate = currentTranslate;

      track.style.transition = 'none';
      slider.style.cursor = 'grabbing';
    }

    function dragMove(e: Event) {
      if (!isDragging) return;
      e.preventDefault();
      const currentPosition = getPositionX(e);
      currentTranslate = prevTranslate + currentPosition - startPos;
      track.style.transform = `translateX(${currentTranslate}px)`;
    }

    function dragEnd() {
      if (!isDragging) return;
      isDragging = false;
      slider.style.cursor = 'grab';
      prevTranslate = currentTranslate;
      
      // Reinicia la animación de autodesplazamiento después de un breve retraso
      setTimeout(() => {
        autoScroll();
      }, 500);
    }

    function autoScroll() {
      if (!isDragging) {
        currentTranslate -= 0.5; // Ajusta la velocidad de desplazamiento aquí
        
        const uniqueItemsWidth = track.scrollWidth / 2;
        // Si el carrusel se ha desplazado más allá de la mitad de su ancho (la parte duplicada)
        if (Math.abs(currentTranslate) >= uniqueItemsWidth) {
          // Lo reseteamos al principio para crear el bucle infinito
          currentTranslate = 0;
        }
        
        track.style.transition = 'none'; // El autodesplazamiento debe ser lineal y suave
        track.style.transform = `translateX(${currentTranslate}px)`;
        prevTranslate = currentTranslate;
      }
      animationFrameId = requestAnimationFrame(autoScroll);
    }

    // Evita que las imágenes sean arrastradas por defecto por el navegador
    const images = slider.querySelectorAll('img');
    images.forEach(img => {
      img.addEventListener('dragstart', (e) => e.preventDefault());
    });

    // Inicia la animación
    autoScroll();
  });
</script>
