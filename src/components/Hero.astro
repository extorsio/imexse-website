---
import { Image } from 'astro:assets';
import cianuroR from '../assets/cianuro_r.png';
import productos from '../assets/productos.jpg';
import sodaCaustica from '../assets/soda-caustica.png';
import empresaHero from '../assets/empresa-hero.jpg';
---

<section class="hero">
  <div class="carousel">
    <div class="carousel-container">
      <div class="carousel-slide active" data-bg={empresaHero.src}>
        <div class="slide-content">
          <h1>Bienvenidos a IMEXSE S.R.L.</h1>
          <p>Líderes en comercialización de productos mineros con más de 30 años de experiencia</p>
          <a href="/nosotros" class="cta-button">Nosotros</a>
        </div>
      </div>
      <div class="carousel-slide" data-bg={cianuroR.src}>
        <div class="slide-content">
          <h2>Cianuro de Sodio</h2>
          <p>Disponible en presentaciones de cilindros de 50 kg y cajas de 1000 kg y 1100 kg</p>
          <a href="/productos" class="cta-button">Productos</a>
        </div>
      </div>
  <div class="carousel-slide" data-bg={sodaCaustica.src}>
        <div class="slide-content">
          <h2>Soda Cáustica</h2>
          <p>Productos mineros de alta calidad para la industria nacional</p>
          <a href="/productos" class="cta-button">Productos</a>
        </div>
      </div>
    </div>
    <div class="carousel-controls">
      <button class="carousel-btn prev" onclick="changeSlide(-1)">‹</button>
      <button class="carousel-btn next" onclick="changeSlide(1)">›</button>
    </div>
    <div class="carousel-indicators">
      <span class="indicator active" onclick="currentSlide(1)"></span>
      <span class="indicator" onclick="currentSlide(2)"></span>
      <span class="indicator" onclick="currentSlide(3)"></span>
    </div>
  </div>
</section>

<script>
  declare global {
    interface Window {
      changeSlide: (n: number) => void;
      currentSlide: (n: number) => void;
    }
  }

  let slideIndex: number = 1;
  let slideInterval: number | undefined;

  function showSlide(n: number): void {
    const slides = document.querySelectorAll('.carousel-slide') as NodeListOf<HTMLElement>;
    const indicators = document.querySelectorAll('.indicator');
    
    if (n > slides.length) { slideIndex = 1 }
    if (n < 1) { slideIndex = slides.length }
    
    slides.forEach((slide, index) => {
      slide.classList.remove('active');
      const bgUrl = slide.getAttribute('data-bg');
      if (bgUrl) {
        slide.style.backgroundImage = `url(${bgUrl})`;
      }
    });
    
    indicators.forEach(indicator => indicator.classList.remove('active'));
    
    slides[slideIndex - 1].classList.add('active');
    indicators[slideIndex - 1].classList.add('active');
  }

  function changeSlide(n: number): void {
    showSlide(slideIndex += n);
    resetAutoSlide();
  }

  function currentSlide(n: number): void {
    showSlide(slideIndex = n);
    resetAutoSlide();
  }

  function nextSlide(): void {
    showSlide(slideIndex += 1);
  }

  function resetAutoSlide(): void {
    if (slideInterval) {
      clearInterval(slideInterval);
    }
    slideInterval = setInterval(nextSlide, 5000) as unknown as number;
  }

  // Auto-advance slides
  slideInterval = setInterval(nextSlide, 5000) as unknown as number;

  // Make functions globally available
  window.changeSlide = changeSlide;
  window.currentSlide = currentSlide;

  document.addEventListener('DOMContentLoaded', () => {
    showSlide(slideIndex);
    resetAutoSlide();
  });
</script>

<style>
  .hero {
    margin-top: 80px;
    position: relative;
    overflow: hidden;
    background: var(--color-white);
    padding: 0;
    height: calc(100vh - 80px);
    max-height: 800px;
    min-height: 500px;
    padding-bottom: 80px; /* Add padding to avoid content being cut off */
  }

  .hero::before {
    content: none;
  }

  .carousel {
    position: relative;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .carousel-container {
    position: relative;
    width: 100%;
    height: 100%;
    border-radius: 0;
    overflow: hidden;
    box-shadow: none;
    margin: 0;
    background: transparent;
    border: none;
  }

  .carousel-slide {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    opacity: 0;
    transition: all 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    transform: scale(1.1);
    background-size: cover;
    background-position: center center;
    background-repeat: no-repeat;
    background-attachment: local;
  }

  .carousel-slide {
    background-size: cover !important;
    background-position: center center !important;
    background-repeat: no-repeat !important;
    background-color: #222;
    transform: scale(1.1);
    transition: opacity 1.2s cubic-bezier(0.25, 0.46, 0.45, 0.94), transform 6s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  .carousel-slide.active {
    opacity: 1;
    transform: scale(1);
    transition: opacity 1.2s cubic-bezier(0.25, 0.46, 0.45, 0.94), transform 6s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  .carousel-slide::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, 
      rgba(17, 24, 39, 0.6) 0%, 
      rgba(17, 24, 39, 0.4) 40%, 
      rgba(3, 105, 161, 0.2) 70%, 
      rgba(0, 0, 0, 0.1) 100%);
    z-index: 1;
    transition: background 0.5s ease;
  }

  .carousel-slide:nth-child(2)::before,
  .carousel-slide:nth-child(3)::before {
    background: linear-gradient(135deg, 
      rgba(17, 24, 39, 0.65) 0%, 
      rgba(17, 24, 39, 0.45) 30%, 
      rgba(3, 105, 161, 0.25) 60%, 
      rgba(0, 0, 0, 0.15) 100%);
  }

  .slide-content {
    flex: 0 0 auto;
    max-width: 700px;
    padding: 4rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
    position: relative;
    z-index: 2;
    margin-left: 5%;
    text-align: left;
    animation: fadeInContent 1.5s 0.5s ease-out forwards;
    opacity: 0;
  }

  @keyframes fadeInContent {
    to {
      opacity: 1;
      transform: translateY(0);
    }
    from {
      opacity: 0;
      transform: translateY(20px);
    }
  }

  .slide-content h1,
  .slide-content h2 {
    font-family: 'Montserrat', sans-serif;
    font-size: 4rem;
    font-weight: 800;
    margin-bottom: 1.5rem;
    color: var(--color-white);
    line-height: 1.2;
    letter-spacing: -0.5px;
    text-shadow: 0 4px 12px rgba(0, 0, 0, 0.6);
  }

  .slide-content p {
    font-family: 'Inter', sans-serif;
    font-size: 1.4rem;
    margin-bottom: 2.5rem;
    color: rgba(255, 255, 255, 0.95);
    line-height: 1.7;
    font-weight: 400;
    text-shadow: 0 2px 6px rgba(0, 0, 0, 0.4);
    max-width: 550px;
  }

  .cta-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    background: linear-gradient(45deg, var(--color-orange), #f97316);
    color: var(--color-white);
    padding: 1.25rem 2.5rem;
    border-radius: 50px;
    font-family: 'Montserrat', sans-serif;
    font-weight: 600;
    font-size: 1.1rem;
    transition: all 0.3s ease;
    box-shadow: 0 10px 20px rgba(234, 88, 12, 0.3), 0 0 0 4px rgba(255, 255, 255, 0);
    text-decoration: none;
    position: relative;
    overflow: hidden;
    align-self: flex-start;
    border: none;
  }

  .cta-button::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
    transition: left 0.6s;
  }

  .cta-button:hover::before {
    left: 100%;
  }

  .cta-button:hover {
    background: linear-gradient(45deg, #f97316, #ea580c);
    transform: translateY(-5px) scale(1.05);
    box-shadow: 0 15px 30px rgba(234, 88, 12, 0.4), 0 0 0 4px rgba(255, 255, 255, 0.2);
  }

  .carousel-controls {
    position: absolute;
    top: 50%;
    left: 0;
    right: 0;
    transform: translateY(-50%);
    display: flex;
    justify-content: space-between;
    padding: 0 2rem;
    pointer-events: none;
    z-index: 10;
  }

  .carousel-btn {
    background: rgba(255, 255, 255, 0.1);
    color: var(--color-white);
    border: 1px solid rgba(255, 255, 255, 0.2);
    width: 50px;
    height: 50px;
    border-radius: 50%;
    font-size: 1.5rem;
    cursor: pointer;
    transition: all 0.3s ease;
    pointer-events: auto;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    backdrop-filter: blur(5px);
  }

  .carousel-btn:hover {
    background: var(--color-orange);
    color: var(--color-white);
    transform: scale(1.1);
    box-shadow: 0 8px 20px rgba(234, 88, 12, 0.3);
    border-color: transparent;
  }

  .carousel-indicators {
    position: absolute;
    bottom: 30px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 1rem;
    z-index: 10;
    background: rgba(0, 0, 0, 0.2);
    padding: 0.75rem 1.5rem;
    border-radius: 50px;
    backdrop-filter: blur(5px);
  }

  .indicator {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.5);
    cursor: pointer;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    border: none;
  }

  .indicator.active {
    background: var(--color-orange);
    transform: scale(1.3);
    box-shadow: 0 0 10px rgba(234, 88, 12, 0.5);
    width: 30px;
    border-radius: 10px;
  }

  .indicator:hover:not(.active) {
    background: rgba(255, 255, 255, 0.8);
    transform: scale(1.1);
  }

  @media (max-width: 768px) {
    .hero {
      margin-top: 70px;
      height: calc(100vh - 70px);
      padding-bottom: 60px;
    }

    .carousel {
      height: 100%;
    }

    .carousel-container {
      margin: 0;
      border-radius: 0;
    }

    .carousel-slide {
      justify-content: center;
    }

    .carousel-slide::before {
      background: linear-gradient(135deg, 
        rgba(17, 24, 39, 0.7) 0%, 
        rgba(17, 24, 39, 0.6) 50%, 
        rgba(0, 0, 0, 0.5) 100%);
    }

    .slide-content {
      padding: 2.5rem 1.5rem;
      margin-left: 0;
      max-width: 100%;
      text-align: center;
    }

    .slide-content h1,
    .slide-content h2 {
      font-size: 2.8rem;
    }

    .slide-content p {
      font-size: 1.2rem;
    }

    .carousel-btn {
      width: 45px;
      height: 45px;
      font-size: 1.25rem;
    }

    .carousel-controls {
      padding: 0 1rem;
    }

    .indicator {
      width: 10px;
      height: 10px;
    }

    .indicator.active {
      width: 25px;
    }

    .cta-button {
      padding: 1rem 2rem;
      font-size: 1rem;
      align-self: center;
    }
  }
</style>