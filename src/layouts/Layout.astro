<style is:global>
  :root {
    /* Paleta de colores profesional */
    --color-navy: #1e293b;          /* Azul marino oscuro para títulos */
    --color-blue-light: #e0f2fe;   /* Azul claro suave para fondos */
    --color-gray-light: #f8fafc;   /* Gris claro como fondo general */
    --color-orange: #ea580c;       /* Naranja técnico para acciones */
    --color-text: #334155;         /* Gris oscuro para texto principal */
    --color-white: #ffffff;
    --color-blue: #0369a1;         /* Azul medio para elementos */
    --color-blue-dark: #075985;    /* Azul más oscuro */
  }

  html {
    font-family: 'Inter', sans-serif;
    scroll-behavior: smooth;
  }

  body {
    line-height: 1.7;
    color: var(--color-text);
    background-color: var(--color-gray-light);
    font-weight: 400;
  }

  /* Tipografía */
  h1, h2, h3, h4, h5, h6 {
    font-family: 'Montserrat', sans-serif;
    color: var(--color-navy);
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 1rem;
  }

  h1 { font-size: 3.5rem; font-weight: 800; }
  h2 { font-size: 2.75rem; font-weight: 700; }
  h3 { font-size: 2rem; font-weight: 600; }
  h4 { font-size: 1.5rem; font-weight: 600; }
  h5 { font-size: 1.25rem; font-weight: 600; }
  h6 { font-size: 1.125rem; font-weight: 500; }

  p {
    font-family: 'Inter', sans-serif;
    color: var(--color-text);
    line-height: 1.7;
    margin-bottom: 1.5rem;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  a {
    text-decoration: none;
    color: inherit;
  }

  /* Botones profesionales */
  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 1rem 2rem;
    background: var(--color-orange);
    color: var(--color-white);
    font-family: 'Montserrat', sans-serif;
    font-weight: 600;
    font-size: 1rem;
    border: none;
    border-radius: 12px;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 4px 12px rgba(234, 88, 12, 0.3);
    text-decoration: none;
  }

  .btn:hover {
    background: #dc2626;
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(234, 88, 12, 0.4);
  }

  .btn-secondary {
    background: var(--color-blue);
    box-shadow: 0 4px 12px rgba(3, 105, 161, 0.3);
  }

  .btn-secondary:hover {
    background: var(--color-blue-dark);
    box-shadow: 0 8px 24px rgba(3, 105, 161, 0.4);
  }

  /* Contenedores con espaciado generoso */
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .section-padding {
    padding: 5rem 0;
  }

  /* Tarjetas modernas */
  .card {
    background: var(--color-white);
    border-radius: 16px;
    padding: 2.5rem;
    box-shadow: 
      0 10px 15px -3px rgba(0, 0, 0, 0.1),
      0 4px 6px -2px rgba(0, 0, 0, 0.05);
    border: 1px solid rgba(203, 213, 225, 0.3);
    transition: all 0.3s ease;
  }

  .card:hover {
    transform: translateY(-4px);
    box-shadow: 
      0 20px 25px -5px rgba(0, 0, 0, 0.1),
      0 10px 10px -5px rgba(0, 0, 0, 0.04);
  }

  @media (min-width: 768px) {
    .container {
      padding: 0 3rem;
    }
    
    h1 { font-size: 4rem; }
    h2 { font-size: 3.25rem; }
  }

  @media (max-width: 768px) {
    html {
      -webkit-text-size-adjust: 100%;
      -ms-text-size-adjust: 100%;
    }
    
    body {
      -webkit-font-smoothing: antialiased;
      -moz-osx-font-smoothing: grayscale;
    }
    
    h1 { font-size: 2.5rem; }
    h2 { font-size: 2rem; }
    h3 { font-size: 1.5rem; }
    
    .section-padding {
      padding: 3rem 0;
    }
    
    /* Touch targets mínimo 44px para accesibilidad móvil */
    button, .btn, a[role="button"] {
      min-height: 44px;
      min-width: 44px;
    }
  }
  
  /* Optimización para pantallas pequeñas */
  @media (max-width: 480px) {
    .container {
      padding: 0 1rem;
    }
    
    h1 { font-size: 2rem; }
    h2 { font-size: 1.75rem; }
    
    .section-padding {
      padding: 2rem 0;
    }
  }
</style>