---
export interface Props {
  title: string;
  description?: string;
  keywords?: string;
  ogImage?: string;
  canonical?: string;
}

const { 
  title, 
  description = "Venta de cianuro de sodio y productos químicos para minería en Perú. IMEXSE S.R.L. distribuye reactivos mineros de alta calidad con cobertura nacional desde Callao. Cotización inmediata.",
