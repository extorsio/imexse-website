<script>
  document.addEventListener('DOMContentLoaded', () => {
    const carousel = document.querySelector('.carousel');
    if (!carousel) return;

    let autoScrollInterval;
    let userInteractionTimeout;

    const scrollSpeed = 1; // P√≠xeles por fotograma
    const intervalTime = 30; // Milisegundos entre fotogramas para controlar la velocidad
    const resumeDelay = 5000; // 5 segundos de espera antes de reanudar

    const startAutoScroll = () => {
      // Limpiar cualquier intervalo existente para evitar duplicados
      clearInterval(autoScrollInterval);
      autoScrollInterval = setInterval(() => {
        // Si el carrusel llega al final, vuelve al principio suavemente
        if (carousel.scrollLeft >= carousel.scrollWidth - carousel.clientWidth - 1) {
          carousel.scrollTo({ left: 0, behavior: 'smooth' });
        } else {
          // Desplaza el carrusel
          carousel.scrollBy({ left: scrollSpeed, behavior: 'auto' });
        }
      }, intervalTime);
    };

    const stopAutoScroll = () => {
      clearInterval(autoScrollInterval);
    };

    // Funci√≥n para manejar la interacci√≥n del usuario
    const handleUserInteraction = () => {
      stopAutoScroll();
      // Limpiar el temporizador de reanudaci√≥n si el usuario interact√∫a de nuevo
      clearTimeout(userInteractionTimeout);
      // Establecer un temporizador para reanudar el desplazamiento autom√°tico
      userInteractionTimeout = setTimeout(() => {
        startAutoScroll();
      }, resumeDelay);
    };

    // Iniciar el desplazamiento autom√°tico al cargar la p√°gina
    startAutoScroll();

    // Pausar cuando el rat√≥n est√° sobre el carrusel para una mejor UX
    carousel.addEventListener('mouseenter', stopAutoScroll);
    carousel.addEventListener('mouseleave', handleUserInteraction);

    // Detectar interacci√≥n directa del usuario
    carousel.addEventListener('mousedown', handleUserInteraction);
    carousel.addEventListener('touchstart', handleUserInteraction, { passive: true });
    carousel.addEventListener('wheel', handleUserInteraction, { passive: true }); // Para el scroll con la rueda del rat√≥n
    
    // Cuando el usuario usa la barra de scroll directamente
    carousel.addEventListener('scroll', () => {
        // Si el scroll es manual, se resetea el timer
        handleUserInteraction();
    }, { passive: true });
  });
</script>
