  title={pageTitle}
  description={pageDescription}
  keywords={pageKeywords}
  canonical="https://imexse.com/"
>
  <Header />
  <Hero />
  <Intro />
  <ProductsSlider />
  <Coverage />
  <Footer />
  <WhatsAppFloat />
