# Optimizaciones de Cache Headers
# Este archivo debe ser configurado en el servidor web

# Cache para imágenes optimizadas (1 año)
/_astro/*.webp
  Cache-Control: public, max-age=31536000, immutable

# Cache para CSS y JS generados (1 año)
/_astro/*.css
  Cache-Control: public, max-age=31536000, immutable

/_astro/*.js
  Cache-Control: public, max-age=31536000, immutable

# Cache para imágenes originales (30 días)
/*.jpg
  Cache-Control: public, max-age=2592000

/*.png
  Cache-Control: public, max-age=2592000

/*.svg
  Cache-Control: public, max-age=2592000

# Cache para archivos de configuración (1 día)
/manifest.json
  Cache-Control: public, max-age=86400

/sitemap.xml
  Cache-Control: public, max-age=86400

/robots.txt
  Cache-Control: public, max-age=86400

# No cache para HTML (para actualizaciones inmediatas)
/*.html
  Cache-Control: public, max-age=0, must-revalidate

# Cache para fuentes (1 año)
/fonts/*
  Cache-Control: public, max-age=31536000, immutable
